<h1>Your current uploaded pics</h1>
<p>Click on an image to edit</p>

<div class="account_imgs">
	<% current_user.animals.each do |animal| %>
		<div class="account_btn_arrange">
			<p style="color: white;"><%= animal.name %></p>
			<form action="/account/<%= animal.id %>/delete" method="post">
				<input type="hidden" name="_method" value="delete">
				<input type="submit" value="Delete">
			</form>
		<% animal.media.each do |upload| %>
			<form action="/account/<%= upload.animal_id %>/edit">
				<img class="image-edit" src="<%= upload.image %>" alt="">
			</form>
		</div>
		<% end %>
	<% end %>
</div>




